{
	"name": "pixelplex-base-server",
	"version": "0.1.0",
	"homepage": "https://gitlab.pixelplex.by/649_bridge/server",
	"license": "UNLICENSED",
	"private": true,
	"scripts": {
		"build": "rm -rf ./dist && npx tsc",
		"start": "npm run start:api",
		"start:api": "npm run build && cd dist && cross-env MODULE=api NODE_CONFIG_DIR=../config node server.js",
		"dev:api": "nodemon -e ts -w ./src -x npm run start:api",
		"lint": "npm run lint:src && npm run lint:typing && npm run lint:types && npm run build",
		"lint:src": "npx tslint -p tsconfig.json -c tslint.json",
		"lint:typing": "npx tslint -c tslint.json ./typing/**/*.d.ts",
		"lint:types": "npx tslint -c tslint.json ./src/types/**/*.d.ts"
	},
	"dependencies": {
		"awilix": "^4.2.0",
		"bignumber.js": "^8.1.1",
		"body-parser": "^1.18.3",
		"config": "^3.0.1",
		"cors": "^2.8.5",
		"express": "^4.16.4",
		"log4js": "^4.0.2",
		"qr-image": "^3.2.0",
		"raven": "^2.6.4"
	},
	"devDependencies": {
		"@types/bignumber.js": "^5.0.0",
		"@types/cors": "^2.8.4",
		"@types/express": "^4.16.1",
		"@types/express-session": "^1.15.11",
		"@types/log4js": "^2.3.5",
		"@types/node": "^10.12.21",
		"@types/qr-image": "^3.2.1",
		"@types/raven": "^2.5.3",
		"cross-env": "^5.1.4",
		"express-session": "^1.15.6",
		"nodemon": "^1.18.9",
		"tslint": "^5.12.1",
		"tslint-config-airbnb": "^5.11.1",
		"typescript": "^3.3.1"
	}
}
